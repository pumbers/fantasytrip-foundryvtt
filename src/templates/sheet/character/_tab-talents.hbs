{{!-- Talents Tab --}}
<div class="tab talents" data-group="primary" data-tab="talents">
    {{#*inline "actions"}}
    <td class="shrink">
        <a class="document-chat" title="{{localize 'FT.actor.sheet.button.chat'}}"><i class="fa fa-comment"></i></a>
        <a class="document-edit" title="{{localize 'FT.actor.sheet.button.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="document-delete" title="{{localize 'FT.actor.sheet.button.delete'}}"><i class="fas fa-trash"></i></a>
    </td>
    {{/inline}}

    {{#if talents}}
    <table>
        <thead>
            <tr>
                {{#if settings.showItemIcons}}<th></th>{{/if}}
                <th class="w-full">{{localize 'FT.actor.sheet.table.talents.name'}}</th>
                <th>{{localize 'FT.actor.sheet.table.talents.attribute'}}</th>
                <th>{{localize 'FT.actor.sheet.table.talents.iq'}}</th>
                <th>{{localize 'FT.actor.sheet.table.talents.cost'}}</th>
                <th></th>
                <th><a class="document-create" data-type="talent" title="{{localize 'FT.actor.sheet.button.create'}}"><i
                            class="fa fa-plus"></i></a></th>
            </tr>
        </thead>
        {{#each (sort talents 'name') as |talent|}}
        <tr data-item-id="{{talent._id}}">
            {{#if ../settings.showItemIcons}}
            <td><img src="{{talent.img}}" /> </td>
            {{/if}}
            <td>{{talent.name}}</td>
            <td>{{#if talent.system.isReady}}{{localize (concat "FT.actor.attribute."
                talent.system.defaultAttribute)}}{{/if}}</td>
            <td>{{talent.system.minIQ}}</td>
            <td>{{talent.system.actualIQCost}}</td>
            <td>{{#if talent.system.isReady}}<a class="px-[2px] action" data-action="talent-roll">{{localize
                    "FT.actor.sheet.button.roll"}}</a>{{/if}}
            </td>
            {{> actions}}
        </tr>
        {{/each}}
        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td class="!text-center">{{system.totalIQCost.talents}}</td>
                <td colspan="2"></td>
            </tr>
        </tfoot>
    </table>
    {{/if}}
</div>