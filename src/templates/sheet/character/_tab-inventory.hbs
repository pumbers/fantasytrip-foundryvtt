{{!-- Inventory Tab --}}
<div class="tab inventory" data-group="primary" data-tab="inventory">
    <div class="flex flex-col gap-2">

        {{#*inline "actions"}}
        <td class="flex flex-row gap-[2px]">
            <a class="document-chat" title="{{localize 'FT.character.sheet.button.chat'}}"><i
                    class="fa fa-comment"></i></a>
            <a class="document-edit" title="{{localize 'FT.character.sheet.button.edit'}}"><i
                    class="fas fa-edit"></i></a>
            <a data-action="item-delete" title="{{localize 'FT.character.sheet.button.delete'}}"><i
                    class="fas fa-trash"></i></a>
        </td>
        {{/inline}}

        {{!-- Items --}}
        {{#if inventory}}
        <table>
            <thead>
                <tr>
                    {{#if settings.showItemIcons}}<th></th>{{/if}}
                    <th class="w-full">{{localize 'FT.character.sheet.table.items.name'}}</th>
                    <th>{{localize 'FT.character.sheet.table.items.cost'}}</th>
                    <th>{{localize 'FT.character.sheet.table.items.wt'}}</th>
                    <th>{{localize 'FT.character.sheet.table.items.qty'}}</th>
                    <th>{{localize 'FT.character.sheet.table.items.capacity'}}</th>
                    <th>{{localize 'FT.character.sheet.table.items.location'}}</th>
                    <th><a class="document-create" data-type="equipment" data-location="carried"
                            title="{{localize 'FT.character.sheet.button.create'}}"><i class="fa fa-plus"></i></a></th>
                </tr>
            </thead>
            {{#each inventory as |item|}}
            <tr data-item-id="{{item._id}}" draggable="true"
                class="item {{#if item.system.isContainer}}item-container{{/if}}">
                {{#if ../settings.showItemIcons}}<td><img src="{{item.img}}" /></td>{{/if}}
                <td>{{#if item.system.isContained}}&rdsh;&nbsp;{{/if}}{{item.name}}</td>
                <td>{{numberFormat item.system.totalCost decimals=1}}</td>
                <td>{{numberFormat item.system.totalWt decimals=1}}</td>
                <td>{{item.system.qty}}</td>
                <td>{{#if item.system.isContainer}}{{numberFormat item.system.remaining decimals=1}}{{/if}}</td>
                <td>
                    {{#unless item.system.container}}
                    <a class="mr-2" data-action="item-change-location"
                        title="{{localize (concat 'FT.character.sheet.label.location.' item.system.location)}}"><i
                            class="{{property ../FT.item.inventory.icons item.system.location}}"></i></a>
                    {{/unless}}
                </td>
                {{> actions}}
            </tr>
            {{/each}}
            <tfoot>
                <tr>
                    {{#if settings.showItemIcons}}<td></td>{{/if}}
                    <td colspan="2" class="!text-right">{{localize 'FT.character.sheet.table.items.carried'}}</td>
                    <td>{{numberFormat system.encumbrance.load decimals=1}}&nbsp;{{localize
                        'FT.character.sheet.table.items.unit'}}</td>
                    <td colspan="4"></td>
                </tr>
            </tfoot>
        </table>
        {{/if}}
    </div>
</div>