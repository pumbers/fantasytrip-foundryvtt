<div class="effects">
    {{#each item.effects as |effect|}}
    <fieldset class="effect" data-effect-id="{{effect._id}}">
        <legend>{{effect.name}}</legend>
        <table>
            <thead>
                <th>{{localize "FT.effect.label.attribute"}}</th>
                <th>{{localize "FT.effect.label.change"}}</th>
                <th>{{localize "FT.effect.label.value"}}</th>
            </thead>
            <tbody>
                {{#each effect.changes as |change|}}
                <tr>
                    <td>{{abbrev change.key len=35 ellipsis=true}}</td>
                    <td>{{localize (concat "FT.effect.modes." change.mode)}}</td>
                    <td>{{change.value}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="actions">
            <button data-effect-action="edit">{{localize "FT.effect.action.edit"}}</button>
            {{#if effect.active}}
            <button data-effect-action="toggle">{{localize "FT.effect.action.off"}}</button>
            {{else}}
            <button data-effect-action="toggle">{{localize "FT.effect.action.on"}}</button>
            {{/if}}
            <button data-effect-action="delete">{{localize "FT.effect.action.delete"}}</button>
        </div>
    </fieldset>
    {{/each}}
    <div>
        <button class="ml-auto mr-0" data-effect-action="create">{{localize "FT.effect.action.create"}}</button>
    </div>
</div>