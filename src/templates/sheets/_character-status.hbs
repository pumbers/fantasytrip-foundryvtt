{{!-- Encumbrance --}}
<div class="grid grid-cols-8 gap-1 text-xs text-center">
    <span class="border-[1px] rounded-sm m-0 p-0 bg-slate-300">
        <i class="icon-knapsack"></i>
    </span>
    {{#each system.encumbrance.capacity as |capacity|}}
    <span
        class="border-[1px] rounded-sm m-0 p-0  {{lookup ../FT.character.tracks.encumbrance.colors @index}}{{#unless (eq @index ../system.encumbrance.level)}}-100{{else}}-500{{/unless}}">
        {{capacity}}&thinsp;{{localize 'FT.character.sheet.table.items.unit'}}
    </span>
    {{/each }}
</div>

{{!-- Fatigue & Damage --}}
<div class="grid grid-cols-8 gap-1 text-xs text-center">
    <span class="border-[1px] rounded-sm m-0 p-0 bg-slate-300">
        <i class="icon-death-skull"></i>
    </span>
    <span class="col-span-7 border-[1px] rounded-sm m-0 p-0 flex flex-row gap-0">
        {{#each (range system.damage)}}
        <span class="grow bg-red-500"></span>
        {{/each}}
        {{#each (range system.fatigue)}}
        <span class="grow bg-amber-500"></span>
        {{/each}}
        {{#each (range system.st.value)}}
        <span class="grow bg-white"></span>
        {{/each}}
    </span>
</div>
<div class="grid grid-cols-6 gap-1 text-xs text-center">
    <div class="field"><label>{{localize "FT.character.sheet.label.fatigue"}}</label><input type="number"
            name="system.fatigue" value="{{system.fatigue}}" min="0"></div>
    <div class="field"><label>{{localize "FT.character.sheet.label.damage"}}</label><input type="number"
            name="system.damage" value="{{system.damage}}" min="0"></div>
    <div class="field"><label>{{localize "FT.character.sheet.label.stMod"}}</label><input type="number"
            name="system.st.mod" value="{{system.st.mod}}">
    </div>
    <div class="field"><label>{{localize "FT.character.sheet.label.dxMod"}}</label><input type="number"
            name="system.dx.mod" value="{{system.dx.mod}}">
    </div>
    <div class="field"><label>{{localize "FT.character.sheet.label.iqMod"}}</label><input type="number"
            name="system.iq.mod" value="{{system.iq.mod}}">
    </div>
    <div class="field"><label>{{localize "FT.character.sheet.label.maMod"}}</label><input type="number"
            name="system.ma.mod" value="{{system.ma.mod}}">
    </div>
</div>



