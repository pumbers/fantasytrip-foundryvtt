{{!-- {{log .}} --}}
<div class="message-content">
    <div class="dice-roll">
        <div class="dice-result">
            {{!-- Roll Formula --}}
            <div class="dice-formula">{{roll.formula}}</div>
            <div class="dice-tooltip">
                {{!-- Normal Foundry Dice Result Display --}}
                {{#each parts}}
                <section class="tooltip-part">
                    <div class="dice">
                        <header class="part-header flexrow">
                            {{#if icon}}
                            <span class="part-method" data-tooltip="{{ method }}" aria-label="{{ localize method }}">
                                {{{ icon }}}
                            </span>
                            {{/if}}
                            <span class="part-formula">{{this.formula}}</span>
                            {{#if this.flavor}}
                            <span class="part-flavor">{{this.flavor}}</span>
                            {{/if}}
                            <span class="part-total">{{this.total}}</span>
                        </header>
                        <ol class="dice-rolls">
                            {{#each this.rolls}}
                            <li class="roll {{this.classes}}">{{{this.result}}}</li>
                            {{/each}}
                        </ol>
                    </div>
                </section>
                {{/each}}
            </div>
            {{!-- Roll Total --}}
            <h4 class="dice-total {{classes}}">{{roll.total}}</h4>
        </div>
    </div>
    <button class="!mt-4 ft-gm-only" data-ft-action="apply-damage" data-token-id="{{token.id}}"
        data-token-name="{{token.name}}" data-actor-id="{{actor.id}}" data-damage="{{roll.total}}">{{localize
        "FT.chat.button.applyDamage"
        name=token.name
        damage=roll.total}}</button>
</div>