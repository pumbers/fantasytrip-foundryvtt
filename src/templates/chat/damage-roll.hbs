{{!-- {{log .}} --}}
<div class="message-content">
    <div class="dice-roll" data-action="expandRoll">
        <div class="dice-result">
            {{!-- Roll Formula --}}
            <div class="dice-formula">{{roll.formula}}</div>
            <div class="dice-tooltip">
                <div class="wrapper">
                    {{!-- Normal Foundry Dice Result Display --}}
                    <section class="tooltip-part">
                        {{#each parts}}
                        <div class="dice">
                            <header class="part-header flexrow">
                                {{#if icon}}
                                <span class="part-method" data-tooltip="{{ method }}"
                                    aria-label="{{ localize method }}">
                                    {{{ icon }}}
                                </span>
                                {{/if}}
                                <span class="part-formula">{{this.formula}}</span>
                                {{#if this.flavor}}
                                <span class="part-flavor">{{this.flavor}}</span>
                                {{/if}}
                                <span class="part-total">{{this.total}}</span>
                            </header>
                            <ol class="dice-rolls">
                                {{#each this.rolls}}
                                <li class="roll {{this.classes}}">{{{this.result}}}</li>
                                {{/each}}
                            </ol>
                        </div>
                        {{/each}}
                    </section>
                </div>
                {{!-- Roll Total --}}
                <h4 class="dice-total {{classes}}">{{roll.total}}</h4>
            </div>
        </div>
    </div>
    <button type="button" class="!mt-4 w-full ft-restricted ft-show-gm" data-ft-action="applyDamage"
        data-token-id="{{token.id}}" data-token-name="{{token.name}}" data-actor-id="{{actor.id}}"
        data-damage="{{roll.total}}">{{localize "FT.system.combat.chat.action.applyDamage" name=token.name
        damage=roll.total}}</button>
</div>